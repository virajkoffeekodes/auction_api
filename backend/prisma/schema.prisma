generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int            @id @default(autoincrement())
  firstname    String
  lastname     String
  mobile       String
  password     String
  isAdmin      Boolean        @default(false)
  produts      Product[]
  AuoctionTime AuoctionTime[]
  // Product   Product? @relation(fields: [productId], references: [id])
  // productId Int?
}

model Product {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  price       String   @db.VarChar(255)
  image       String
  bidder      Bidder[]
  User        User?    @relation(fields: [userId], references: [id])
  userId      Int?
}

model Bidder {
  id        Int      @id @default(autoincrement())
  firstname String
  lastname  String
  mobile    String
  password  String
  isAdmin   Boolean  @default(false)
  Product   Product? @relation(fields: [productId], references: [id])
  productId Int?
}

model AuoctionTime {
  id     Int   @id @default(autoincrement())
  User   User? @relation(fields: [userId], references: [id])
  userId Int?

  start_time       String
  end_time         String
  date             String
  isAuctionStarted Boolean @default(false)
}
